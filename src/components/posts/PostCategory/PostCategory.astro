---
// Style imports
import "@style/tailwind.css"

// Props
export interface Props {
	name?: string
	description?: string
	link?: string
}

const {
	name,
	description,
	link
} = Astro.props as Props
---

<style lang="scss">
	@import "/src/styles/vars.module.scss";
	.PostCategory{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		width: 33.333%;
		padding: $clampMedium;
	}

	.cell{
		width: 100%;
		max-width: 350px;
		height: 100%;
		border: solid 2px #212121;
		padding: $clampExtraSmall;

		.title{
			font-size: $clampLarge;
			border-bottom: $border1;
			padding-bottom: $clampExtraSmall;
			margin-bottom: $clampExtraSmall;
			display: block;
		}
		.description{
			display: block;
		}
		.button{
			margin-top: $clampMedium;
		}
	}
</style>

<div class="PostCategory">
	<div class="cell">
		
		<p class="title">
			{name}
		</p>

		<p class="description">
			{description}
		</p>

		<a class="button" href={"/resources?category=" + link} >
			View Resources 
		</a>

	</div>
</div>
