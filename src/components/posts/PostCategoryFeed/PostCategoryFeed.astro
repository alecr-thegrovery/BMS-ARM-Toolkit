			name="Category 1"
			subText="subText copy"
			link="category-name"
		/>

		<PostCategory
			name="Category 2"
			subText="subText copy"
			link="category-name"
		/>

		<PostCategory
			name="Category 3"
			subText="subText copy"
			link="category-name"
		/>

